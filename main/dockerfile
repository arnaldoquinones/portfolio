# Usar Ubuntu como base
FROM ubuntu:22.04

# Establecer la zona horaria para evitar interacciones durante la instalación
ENV TZ=Etc/UTC
RUN apt-get update && apt-get install -y tzdata

# Instalar dependencias básicas
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    git \
    curl \
    wget \
    build-essential \
    libssl-dev \
    libffi-dev \
    && apt-get clean

# Crear un directorio de trabajo
WORKDIR /app

# Instalar Rasa
RUN pip install --no-cache-dir rasa

# Instalar Gradio
RUN pip install --no-cache-dir gradio

# Instalar Reflex
RUN pip install --no-cache-dir reflex

# Agregar los puertos que estas aplicaciones podrían usar
EXPOSE 5005 7860 8000

# Configurar el comando por defecto para interactuar con el contenedor
CMD ["bash"]
